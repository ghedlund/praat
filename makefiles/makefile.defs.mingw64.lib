PREFIX = /mingw64/bin/x86_64-w64-mingw32-

CC = $(PREFIX)gcc-posix

CXX = $(PREFIX)g++-posix

COMMONFLAGS = -pthread -DPRAAT_LIB -municode -D_FILE_OFFSET_BITS=64 -O3 

CFLAGS = -std=gnu99 $(COMMONFLAGS)

CXXFLAGS = -std=gnu++17 $(CFLAGS) -Wshadow

LINK = $(PREFIX)g++-posix

EXECUTABLE = Praat.exe
LIBRARY = jpraat.dll

LIBS = -L/mingw64/lib -lwinmm -lwsock32 -lcomctl32 -lole32 -lgdi32 /mingw64/lib/GdiPlus.dll -lcomdlg32 -static -lpthread -static-libgcc -static-libstdc++ -mwindows -static -Wl,--subsystem,windows

AR = $(PREFIX)ar
RANLIB = $(PREFIX)ranlib
WINDRES = $(PREFIX)windres
ICON = praat_win.o
MAIN_ICON = main/praat_win.o
